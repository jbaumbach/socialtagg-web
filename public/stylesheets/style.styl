/*
 * "Stylus" CSS source file.  
 *
 * Based on original tutorial here:
 *
 * http://clock.co.uk/tech-blogs/a-simple-website-in-nodejs-with-express-jade-and-stylus
 *
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 *
 * Colors below: http://colorschemedesigner.com/#3.22wf7rwVjiB
 */

main-color = #50708E
background-color = #031B34
text-color = white
link-color = #50708E
error-color = #DBB174
error-color-contrast = #693104

a:link, a:visited 
  color link-color
  text-decoration none
a:hover
  text-decoration underline

body
  font-family 'Georgia'
  background-color background-color
  color text-color

h2
  color text-color
  font-size 1.25em
  padding 0 0 10px 0
  
form
  padding 0 0 20px 0
  
header
  font-family 'Quicksand'
  padding 50px 10px
  a:link, a:visited 
    color #fff
  color #fff
  font-size 25px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 500px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 300px

  p
    margin-bottom 20px
  ul
    label
      float left
      width 120px
      
.sidebar
  float left
  width 200px

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 5px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

.error
  color error-color

p
  line-height 1.6

footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px
  
div.apisettings
  color error-color
  font-family 'Courier'
  font-size .9 em
  width 500px
  span 
    color text-color
    display inline-block;
    width 100px;
    font-family 'Georgia'
  li
    height 22px
    
.api-documentation
  p
    margin-bottom 5px
  width 500px
  .title
    color main-color
  .description
    font-size .8em
  .signature
    span
      color main-color
      font-family 'Courier'
  .tryit
    font-family 'Courier'
    font-size .8em
    background error-color
    color error-color-contrast
    padding 15px
    border-radius 5px
    border 1px solid #ccc
