include mixins/twittertimeline

extends layout

block content

  //-.container
    .sixteen.columns
      #page-title
        h2 Event Details
        #bolded-line  
  
  .container.my-events
    if !locals.event

      .sixteen.columns
        p Sorry, that event is not accessible.
    
    else

      .twelve.columns
        .headline.no-margin
          h3 Event Details

        .twelve.columns
          ul
            li
              .desc Name
              .value #{ event.name }

            li
              .desc Description
              .value #{ event.description }  

            li
              .desc Date
              .value #{ event.startDate }


        
        .twelve.columns
          .headline
            h4 Your Contaggs from Event


          if !public.isLoggedIn
            p
              a(href=links.login) Log in 
              | to view your contaggs.

          else

            //- Display the event's contaggs if we have any
            if locals.contaggs
              each contagg in contaggs
                .twelve.columns.contagg-container
                  a(href=contagg.path)
                    img(src=contagg.pictureUrl).user-image
                    p #{ contagg.name }
    
            else
              .twelve.columns
                p You do not have any contaggs from this event.


        //- Not going to work as it stands - see comment in the mixin
          if event.hashtag
            .twelve.columns
              .headline
                h4 Tweets
    
              mixin twittertimeline(event.hashtag)
      

  
      include includes/eventtools










